{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2018",
    "module": "ES2020",
    "lib": ["es2020", "DOM", "WebWorker"],
    "strict": true,
    "importsNotUsedAsValues": "error",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "tsc",
    "emitDeclarationOnly": true,
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "jsx": "react"
  },
  "include": ["src/**/*"]
}
